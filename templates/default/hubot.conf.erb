start on filesystem or runlevel [2345]
stop on runlevel [!2345]

setuid <%= node['modcloth_hubot']['user'] %>
umask 022

respawn
respawn limit 5 60

script
  exec <%= node['modcloth_hubot']['home'] %>/shared/hubot-runner
end script
